{
  "name": "sonarflow",
  "version": "1.0.6-beta.0",
  "description": "CLI utility for fetching SonarQube issues and integrating with Bitbucket/GitHub PR workflows",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "sonarflow": "dist/cli.js"
  },
  "scripts": {
    "build": "tsgo",
    "dev": "tsgo --watch",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "init": "bun run src/init.ts",
    "fetch": "bun run src/cli.ts fetch",
    "version": "bun run src/cli.ts --version"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.10.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "figlet": "^1.9.4",
    "fs-extra": "^11.3.2",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0",
    "zod": "^3.25.76"
  },
  "files": [
    "dist",
    "templates",
    "prompts",
    "README.md",
    "package.json"
  ]
}
