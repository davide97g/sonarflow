{
  "name": "sonarflow",
  "version": "1.0.1",
  "description": "CLI utility for fetching SonarQube issues and integrating with Bitbucket/GitHub PR workflows",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@sonarflow/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "check": "turbo run check",
    "check:fix": "turbo run check:fix",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davide97g/sonarflow.git"
  },
  "keywords": [
    "sonarqube",
    "sonar",
    "code-quality",
    "linting",
    "bitbucket",
    "github",
    "pr",
    "pull-request",
    "cli",
    "autofixer",
    "sonarflow",
    "code-analysis"
  ],
  "author": "davide97g",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davide97g/sonarflow/issues"
  },
  "homepage": "https://github.com/davide97g/sonarflow#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.10.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "figlet": "^1.9.4",
    "fs-extra": "^11.3.2",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.1",
    "@typescript/native-preview": "^7.0.0-dev.20251127.1",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "turbo": "^2.6.1"
  },
  "type": "module",
  "engines": {
    "node": ">=22.21.0"
  },
  "packageManager": "bun@1.3.3",
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
