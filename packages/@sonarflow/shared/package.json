{
  "name": "@sonarflow/shared",
  "version": "1.0.0-beta.4",
  "description": "Shared templates and prompts for Sonarflow",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsgo",
    "dev": "tsgo --watch",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src"
  },
  "files": [
    "dist",
    "templates",
    "prompts"
  ]
}

